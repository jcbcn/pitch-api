{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 80
        }
      ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-Host": "localhost.pitch-game.io:443",
        "X-Forwarded-Proto": "https"
      },
      "UpstreamPathTemplate": "/identity/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true, //TODO SSL for local individual certs
      "DownstreamHostAndPorts": [
        {
          "Host": "store",
          "Port": 443
        }
      ],
      "UpstreamPathTemplate": "/store/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "card",
          "Port": 443
        }
      ],
      "UpstreamPathTemplate": "/card/{everything}",
      "UpstreamHttpMethod": [ "Get" ]
    }
  ],
  "GlobalConfiguration": {}
}